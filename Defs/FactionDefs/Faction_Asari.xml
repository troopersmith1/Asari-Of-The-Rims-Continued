<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
		<defName>AsariUnion</defName>
		<label>asari union</label>
    <description>A colony of the Asari Union, who have been here for quite while and choose to stay out of the afairs of humans most of the time.\n\nThey are concerned with the practical matters of trade, trust, and survival.</description>
    <pawnsPlural>asari</pawnsPlural>
  	<fixedName>Asari Union</fixedName>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>matriarch</leaderTitle>
    <factionIconPath>World/WorldObjects/AsariFactionBase</factionIconPath>
    <colorSpectrum>
      <li>(0.64, 0.42, 0.36)</li>
      <li>(0.47, 0.5, 0.91)</li>
    </colorSpectrum>
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
    <pawnNameMaker>NamerPersonAsari</pawnNameMaker>
	<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
	<techLevel>Ultra</techLevel>
  <backstoryFilters>
			<li>
      <categories>
			<li>Civil</li>
			<li>Outlander</li>
      </categories>
      </li>
  	</backstoryFilters>
	<hairTags>
			<li>Urban</li>
      <li>Rural</li>
      <li>Tribal</li>
      <li>Punk</li>
	</hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>0</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
   <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
       <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <AsariColonist>50</AsariColonist>
          <AsariSecurityGuard>90</AsariSecurityGuard>
          <AsariMatriarch>80</AsariMatriarch>
          <AsariRecruit>100</AsariRecruit>
          <AsariHuntress>130</AsariHuntress>
          <AsariCommando>130</AsariCommando>
          <AsariCommandoElite>170</AsariCommandoElite>
        </options>
      </li>
            <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <AsariColonist>50</AsariColonist>
          <AsariSecurityGuard>90</AsariSecurityGuard>
          <AsariMatriarch>80</AsariMatriarch>
          <AsariRecruit>100</AsariRecruit>
          <AsariHuntress>130</AsariHuntress>
        </options>
      </li>
	  <li>
      <kindDef>Trader</kindDef>
        <traders>
          <AsariTrader>1</AsariTrader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <AsariSecurityGuard>90</AsariSecurityGuard>
          <AsariRecruit>100</AsariRecruit>
          <AsariHuntress>130</AsariHuntress>
          <AsariCommando>130</AsariCommando>
        </guards>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
          <AsariColonist>50</AsariColonist>
          <AsariSecurityGuard>90</AsariSecurityGuard>
          <AsariMatriarch>80</AsariMatriarch>
          <AsariRecruit>100</AsariRecruit>
          <AsariHuntress>130</AsariHuntress>
          <AsariCommando>130</AsariCommando>
          <AsariCommandoElite>170</AsariCommandoElite>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	<apparelStuffFilter>
		<thingDefs>
			<li>Synthread</li>
			<li>Hyperweave</li>
		</thingDefs>
	</apparelStuffFilter>
  </FactionDef>

</Defs>